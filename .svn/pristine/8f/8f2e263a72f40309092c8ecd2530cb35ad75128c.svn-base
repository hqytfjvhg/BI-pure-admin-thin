<template>
  <div>
    <el-dialog
      v-model="dialog.show"
      :title="dialog.title"
      :width="dialog.width"
      center
    >
      <slot />
      <template #footer>
        <div>
          <el-button @click="close">{{ t("status.cancle") }}</el-button>
          <el-button type="primary" @click="confirm">{{
            t("status.confirm")
          }}</el-button>
        </div>
      </template>
    </el-dialog>
  </div>
</template>

<script setup>
import { useI18n } from "vue-i18n";

const { t } = useI18n();
const props = defineProps({
  dialog: {
    type: Object,
    default: () => {
      return { show: false, title: "", width: "" };
    }
  }
});

const emit = defineEmits(["confirm"]);
const confirm = () => {
  emit("confirm");
};
const close = () => {
  props.dialog.show = false;
};
</script>

<style lang="scss" scoped></style>
