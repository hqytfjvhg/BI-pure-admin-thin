<script setup>
import ReCol from "@/components/ReCol";
import { reactive, ref, onMounted, nextTick, onUnmounted } from "vue";
import { useI18n } from "vue-i18n";
import * as echarts from "echarts";
import { getRealSaleDataToForecastData } from "@/api/biDataBoard/saleChartsOne";
import { selectDistributor } from "@/api/permission/distributors";

const { t } = useI18n();

const formData = reactive({ date: null, customer: "" });
const customerOptions = ref([]);

//图表一 销售数据与预期数据
let salesBar = ref(null);
const titleData = ref([
  t("salesBoard.saleChartsOne.forecast"),
  t("salesBoard.saleChartsOne.lastYear"),
  t("salesBoard.saleChartsOne.samePeriod")
]);
// const yData = ref([
//   [
//     `${"1-" + (new Date(formData.date).getMonth() + 1) + t("salesBoard.saleChartsOne.forecastX")}`
//   ],
//   [
//     `${"1-" + (new Date(formData.date).getMonth() + 1) + t("salesBoard.saleChartsOne.lastYearX")}`
//   ],
//   [
//     `${new Date(formData.date).getFullYear() - 1 + t("salesBoard.saleChartsOne.samePeriodX")}`,
//     `${new Date(formData.date).getFullYear() + t("salesBoard.saleChartsOne.samePeriodX")}`
//   ]
// ]);
const yData = ref([]);
const handleChangeDate = val => {
  yData.value = [
    [
      `${"1-" + (new Date(val).getMonth() + 1) + t("salesBoard.saleChartsOne.forecastX")}`
    ],
    [
      `${"1-" + (new Date(val).getMonth() + 1) + t("salesBoard.saleChartsOne.lastYearX")}`
    ],
    [
      `${new Date(val).getFullYear() - 1 + t("salesBoard.saleChartsOne.samePeriodX")}`,
      `${new Date(val).getFullYear() + t("salesBoard.saleChartsOne.samePeriodX")}`
    ]
  ];
  // console.log(val, formData.date);
  // console.log(yData.value);
  // console.log(
  //   new Date(formData.date),
  //   new Date(formData.date).getFullYear(),
  //   new Date(formData.date).getMonth()
  // );
};
// console.log(yData.value);
const sales = (arr, index) => {
  let xData = [];
  // let yData = [];
  arr.forEach(op => {
    // yData.push(op.total);
    xData.push(op.dateString);
  });
  let option = {
    title: {
      text: titleData.value[index],
      left: "center",
      textStyle: {}
    },
    tooltip: {
      trigger: "axis",
      axisPointer: {
        type: "shadow"
      }
    },
    // legend: {
    //   top: '2%',
    //   icon: 'rect',
    //   left: '2%'
    // },
    grid: {
      left: "4%",
      right: "4%",
      bottom: "0",
      top: "10%",
      containLabel: true
    },
    xAxis: {
      type: "category",
      data: xData
      // axisLabel: {
      //   rotate: 45 // 将标签倾斜45度
      // }
    },
    yAxis: {
      type: "value",
      name: "US$m",
      nameTextStyle: {
        fontWeight: "600"
      }
    },
    series: [
      {
        data: yData.value[index],
        type: "bar",
        barWidth: 20
      }
    ]
  };
  let myChartOne = echarts.init(document.getElementById("salesOne-bar"));
  let myChartTwo = echarts.init(document.getElementById("salesTwo-bar"));
  let myChartThree = echarts.init(document.getElementById("salesThree-bar"));
  option && myChartOne.setOption(option);
  option && myChartTwo.setOption(option);
  option && myChartThree.setOption(option);
  console.log(myChartOne, option);
};

//滚动12个月
let rollingBar = ref(null);
const rolling = arr => {
  let xData = [];
  let yData = [];
  arr.forEach(op => {
    yData.push(op.total);
    xData.push(op.dateString);
  });
  let myChart = echarts.init(document.getElementById("rolling-bar"));
  document.getElementById("rolling-bar").removeAttribute("_echarts_instance_");
  myChart.setOption({
    title: {
      text: t("salesBoard.saleChartsOne.rolling"),
      left: "center",
      textStyle: {}
    },
    tooltip: {
      trigger: "axis",
      axisPointer: {
        type: "shadow"
      }
    },
    // legend: {
    //   top: '2%',
    //   icon: 'rect',
    //   left: '2%'
    // },
    grid: {
      left: "4%",
      right: "4%",
      bottom: "0",
      top: "10%",
      containLabel: true
    },
    xAxis: {
      type: "category",
      data: xData
      // axisLabel: {
      //   rotate: 45 // 将标签倾斜45度
      // }
    },
    yAxis: {
      type: "value",
      name: "US$m",
      nameTextStyle: {
        fontWeight: "600"
      }
    },
    series: [
      {
        data: yData,
        type: "line",
        lineWidth: 20
      }
    ]
  });
};

//获取经销商
const getDistributor = () => {
  selectDistributor().then(res => {
    customerOptions.value = res.data;
  });
};

//获取数据
const getData = () => {
  getRealSaleDataToForecastData(formData).then(res => {
    let salesOne = [
      {
        forecastSaleData: res.data.forecastSaleData,
        currentYearRealSaleData: res.data.currentYearRealSaleData
      }
    ];
    let salesTwo = [
      {
        lastYearRealSaleData: res.data.lastYearRealSaleData,
        currentYearRealSaleData: res.data.currentYearRealSaleData
      }
    ];
    let salesThree = [
      {
        lastYearCurrentMonthSaleData: res.data.lastYearCurrentMonthSaleData,
        currentYearCurrentMonthSaleData:
          res.data.currentYearCurrentMonthSaleData
      }
    ];
    let rollingData = res.data.rollMonthContentList;
    nextTick(() => {
      rolling(rollingData);
      sales(salesOne, 0);
      sales(salesOne, 1);
      sales(salesOne, 2);
    });
  });
};

onMounted(() => {
  getDistributor();
  // 监听语言切换，重新渲染图表
  // getData();
  // window.addEventListener("setItemEvent", e => {
  //   getData();
  // });
});

onUnmounted(() => {
  // 移除对 sessionStorage 的监听
  window.removeEventListener("setItemEvent", () => {});
});
